<%- include('partials/header') %>

<div class="jumbotron secret-jumbo mt-2 text-center col-lg-10 col-md-8 col-sm-10 col-xs-6">
  <div class="container secret-container">
    <i class="fas fa-key fa-5x"></i>
    <h1 class="display-3"> Secrets!</h1>
    <div class="secrets-div" style="overflow-y: scroll;height: 50vh;">
      <%  usersWithSecrets.forEach((users)=>{  %>
        <%   users.secret.forEach((secret)=>{ %>
          <p class="secret-text"><%=secret%></p>
          <% }) %>
          <% }) %>
          <hr>
    </div>  
    <a class="btn btn-light btn-lg mt-1" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg mt-1" href="/submit" role="button">Submit a Secret</a>
  </div>
</div>

<%- include('partials/footer') %>
